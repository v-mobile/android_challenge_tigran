<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/first_name_ipl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/first_name">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/last_name_ipl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/last_name"
        android:layout_below="@id/first_name_ipl">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/dialog_add_btn"
        style="@style/AppDialogButton"
        android:layout_alignParentRight="true"
        android:layout_below="@id/last_name_ipl"
        android:text="@string/add" />

    <Button
        android:id="@+id/dialog_cancel_btn"
        style="@style/AppDialogButton"
        android:layout_below="@id/last_name_ipl"
        android:text="@string/cancel"
        android:layout_toLeftOf="@id/dialog_add_btn" />

</RelativeLayout>